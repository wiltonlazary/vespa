search indexrewrite {

    document indexrewrite {
        field title_src type string {
        }
    }

    field title type string {
        indexing: input title_src | lowercase | normalize | tokenize | index
        rank-type: about
        stemming: none
        alias: headline
    }

    field title_s type string {
        indexing: input title_src | summary
    }

}
