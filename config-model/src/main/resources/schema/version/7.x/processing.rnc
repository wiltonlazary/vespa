# Schema for processing components and chains

ProcessingRenderer = element renderer {
   ComponentDefinition
}

Processing =
    element processing {
        Processor* &
        Chain* &
        ProcessingRenderer* &
        GenericConfig*
   }

ChainBaseContent =
    ComponentId &
    ChainInheritance &
    GenericConfig*

Chain = element chain {
        ChainBaseContent &
        Processor* &
        Phase*
    }

ChainInheritance =
    attribute inherits { text }? &
    attribute excludes { text }? &
    element inherits {
        element chain { ComponentSpec }* &
        element exclude { ComponentSpec }*
    }?

Processor =
    element processor {
        BundleSpec &
        GenericSearcherOrDocumentProcessor
    }
